{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "google.maps",
      "vitest/globals",
      "node"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "docs/**"
  ]
}
